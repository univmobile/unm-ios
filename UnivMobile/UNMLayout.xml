<UNMLayout>

<UNMLoginController>

	<UIButton id="loginShibbolethButton" accessibilityIdentifier="button-loginShibboleth"
			lineBreakMode="NSLineBreakByWordWrapping"
			textAlignment="NSTextAlignmentCenter">
		<frame x="50.0" y="180.0" width="220.0" height="60.0"/>
		<title forState="UIControlStateNormal"
			value="Sécurité Shibboleth…&#13;&#13;Aucune université sélectionnée."/>
		<titleColor forState="UIControlStateHighlighted" value="UIColor.greenColor"/>
		<titleColor forState="UIControlStateDisabled" value="UIColor.grayColor"/>
	</UIButton>	
	
	<UIButton id="loginClassicButton" accessibilityIdentifier="button-loginClassic">
		<frame x="50.0" y="300.0" width="220.0" height="60.0"/>
		<title forState="UIControlStateNormal" value="Identification standard…"/>
		<titleColor forState="UIControlStateHighlighted" value="UIColor.greenColor"/>
	</UIButton>
	
</UNMLoginController>

<UNMLoginClassicController>
	
	<UILabel id="loginLabel" accessibilityIdentifier="label-loginClassic-login"
			text="e-mail ou uid"
			textColor="UIColor.whiteColor"
			textAlignment="NSTextAlignmentCenter">
		<frame x="50.0" y="80.0" width="220.0" height="60.0"/>
		<systemFont size="18"/>
	</UILabel>

	<UILabel id="passwordLabel" accessibilityIdentifier="label-loginClassic-password"
			text="mot de passe"
			textColor="UIColor.whiteColor"
			textAlignment="NSTextAlignmentCenter">
		<frame x="50.0" y="170.0" width="220.0" height="60.0"/>
		<systemFont size="18"/>
	</UILabel>

	<UILabel id="errorLabel" accessibilityIdentifier="label-loginClassic-error"
			hidden="YES"
			text="Erreur d’authentification"
			textColor="UIColor.redColor"
			textAlignment="NSTextAlignmentCenter">
		<frame x="50.0" y="260.0" width="220.0" height="60.0"/>
		<systemFont size="18"/>
	</UILabel>

	<UITextField id="loginText" accessibilityIdentifier="text-loginClassic-login"
			backgroundColor="UIColor.whiteColor"
			textAlignment="NSTextAlignmentCenter"
			returnKeyType="UIReturnKeyDone"
			keyboardType="UIKeyboardTypeNamePhonePad">
		<frame x="20.0" y="130.0" width="280.0" height="30.0"/>
	</UITextField>
	
	<UITextField id="passwordText" accessibilityIdentifier="text-loginClassic-password"
			backgroundColor="UIColor.whiteColor"
			textAlignment="NSTextAlignmentCenter"
			returnKeyType="UIReturnKeyDone"
			keyboardType="UIKeyboardTypeNamePhonePad"
			secureTextEntry="YES">
		<frame x="20.0" y="220.0" width="280.0" height="30.0"/>
	</UITextField>

	<UIButton id="loginButton" accessibilityIdentifier="button-login">
		<frame x="50.0" y="300.0" width="220.0" height="60.0"/>
		<title forState="UIControlStateNormal" value="Connexion"/>
		<titleColor forState="UIControlStateHighlighted" value="UIColor.greenColor"/>
	</UIButton>

</UNMLoginClassicController>

<UNMLoginShibbolethController>

	<UIWebView id="webView" accessibilityIdentifier="webView-shibboleth"
			xbackgroundColor="UIColor.redColor">
		<frame ref="superview.bounds"/>
		<!--
		<frame x="0.0" y="80.0" width="320.0" height="360.0"/>	
		-->
	</UIWebView>
	
</UNMLoginShibbolethController>

</UNMLayout>